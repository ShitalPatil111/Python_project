pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ShitalPatil111/Python_project.git']])
            }
        }
        stage('Build') {
            steps {
                git branch: 'main', url: 'https://github.com/ShitalPatil111/Python_project.git'
                bat '''"C:\\Users\\YourUser\\AppData\\Local\\Programs\\Python\\Python311\\python.exe" atm.py
'''
            }
        }
        stage('Test') {
            steps {
                echo "Python program is executing successfully...."
            }
        }
    }
}
